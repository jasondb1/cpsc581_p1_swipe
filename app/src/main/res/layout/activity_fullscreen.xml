<io.codetail.widget.RevealFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0099cc"
    tools:context=".FullscreenActivity"
    android:id="@+id/fullscreen_content_background">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="HI!"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/imgRandom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>
        <!--android:layout_centerInParent="true" -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/correct_button"
            android:layout_width="100px"
            android:layout_height="235px"
            android:layout_x="0dp"
            android:layout_y="0dp"
            android:background="@drawable/waldo_walking" />
            <!--android:text="@string/correct_button" />-->


        <Button
            android:id="@+id/dummy_button1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_x="100px"
            android:layout_y="102px"
            android:background="@drawable/waldo_half_wave" />
            <!--android:text="@string/dummy_button" />-->

        <Button
            android:id="@+id/dummy_button2"
            android:layout_width="100px"
            android:layout_height="196px"
            android:layout_x="0dp"
            android:layout_y="0dp"
            android:background="@drawable/waldo_lean_wave"/>
            <!--android:text="@string/dummy_button" />-->

        <Button
            android:id="@+id/dummy_button3"
            android:layout_width="100px"
            android:layout_height="118px"
            android:layout_x="0dp"
            android:layout_y="0dp"
            android:background="@drawable/waldo_face"/>
            <!--android:text="@string/dummy_button" />-->

    </RelativeLayout>



